{
    "tasks": [
      {
        "type": "cppbuild",
        "label": "C/C++: g++ build App",
        "command": "/usr/bin/g++",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${workspaceFolder}/main.cpp",
          "${workspaceFolder}/include/defs.cpp",
          "${workspaceFolder}/include/graphics.cpp",
          "${workspaceFolder}/include/classes.cpp",
          "${workspaceFolder}/include/gameObjects.cpp",
          "-o",
          "${workspaceFolder}/out/main",
          "-I/usr/include/boost -D_REENTRANT",
          "-I/usr/include/SDL2 -D_REENTRANT",
          "-lSDL2",
          "-lSDL2_ttf"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "detail": "Task generated by Debugger."
      },
      {
        "type": "cppbuild",
        "label": "C/C++: g++ build optimized active file",
        "command": "/usr/bin/g++",
        "args": [
          "-fdiagnostics-color=always",
          "-O4",
          "-g",
          "${workspaceFolder}/main.cpp",
          "${workspaceFolder}/include/defs.cpp",
          "${workspaceFolder}/include/graphics.cpp",
          "${workspaceFolder}/include/classes.cpp",
          "${workspaceFolder}/include/gameObjects.cpp",
          "-o",
          "${workspaceFolder}/out/main",
          "-I/usr/include/boost -D_REENTRANT",
          "-I/usr/include/SDL2 -D_REENTRANT",
          "-lSDL2",
          "-lSDL2_ttf"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": false
        },
        "detail": "Task generated by Debugger."
      },
      {
        "type": "cppbuild",
        "label": "C/C++: g++ build test file",
        "command": "/usr/bin/g++",
        "args": [
          "-g",
          "${workspaceFolder}/test/test.cpp",
          "${workspaceFolder}/include/defs.cpp",
          "${workspaceFolder}/include/classes.cpp",
          "-o",
          "${workspaceFolder}/out/test"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": "build",
        "detail": "Task generated by Debugger."
      },
      {
        "type": "cppbuild",
        "label": "C/C++: g++ build active file",
        "command": "/usr/bin/g++",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "${workspaceFolder}/include/defs.cpp",
          "${workspaceFolder}/include/classes.cpp",
          "-o",
          "${workspaceFolder}/out/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "detail": "Task generated by Debugger."
      },
      {
        "type": "cmake",
        "label": "CMake: build release",
        "command": "build",
        "targets": ["all"],
        "group": "build",
        "problemMatcher": [],
        "detail": "CMake template build task"
      }
    ],
    "version": "2.0.0"
}